<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.suan.flowlayout.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.suan.flowlayout.FlowLayout
                flow:orientation="horizontal"
                android:layout_marginBottom="30dp"
                flow:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/gravity_center"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/divide_line"
                    android:textColor="#ffffff"
                    android:textSize="8dp"
                    android:background="#ffc145"
                    android:layout_width="match_parent"
                    flow:lineNum="2"
                    android:layout_height="10dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#4c9be6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#c2b765"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#fe8f58"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

            </com.suan.flowlayout.FlowLayout>

            <com.suan.flowlayout.FlowLayout
                flow:orientation="horizontal"
                android:layout_marginBottom="30dp"
                flow:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/gravity_right"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/divide_line"
                    android:textColor="#ffffff"
                    android:textSize="8dp"
                    android:background="#ffc145"
                    android:layout_width="match_parent"
                    flow:lineNum="2"
                    android:layout_height="10dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#4c9be6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_2"
                    flow:weight="2"
                    style="@style/textStyle"
                    android:background="#c2b765"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_3"
                    flow:weight="3"
                    style="@style/textStyle"
                    android:background="#fe8f58"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

            </com.suan.flowlayout.FlowLayout>

            <com.suan.flowlayout.FlowLayout
                flow:orientation="horizontal"
                android:layout_marginBottom="30dp"
                flow:gravity="right"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/gravity_right"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/divide_line"
                    android:textColor="#ffffff"
                    android:textSize="8dp"
                    android:background="#ffc145"
                    android:layout_width="match_parent"
                    flow:lineNum="2"
                    android:layout_height="10dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#4c9be6"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_2"
                    flow:weight="2"
                    style="@style/textStyle"
                    android:background="#c2b765"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/weight_3"
                    flow:weight="3"
                    style="@style/textStyle"
                    android:background="#fe8f58"
                    android:layout_width="0dp"
                    android:layout_height="80dp"/>

            </com.suan.flowlayout.FlowLayout>

            <com.suan.flowlayout.FlowLayout
                flow:orientation="vertical"
                android:layout_marginBottom="30dp"
                flow:gravity="top"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:text="@string/gravity_top"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/divide_line"
                    android:textColor="#ffffff"
                    android:textSize="8dp"
                    android:background="#ffc145"
                    android:layout_height="match_parent"
                    flow:lineNum="2"
                    android:layout_width="10dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#4c9be6"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:text="@string/weight_2"
                    flow:weight="2"
                    style="@style/textStyle"
                    android:background="#c2b765"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:text="@string/weight_3"
                    flow:weight="3"
                    style="@style/textStyle"
                    android:background="#fe8f58"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

            </com.suan.flowlayout.FlowLayout>

            <com.suan.flowlayout.FlowLayout
                flow:orientation="vertical"
                android:layout_marginBottom="30dp"
                flow:gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <TextView
                    android:text="@string/gravity_bottom"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"/>

                <TextView
                    android:text="@string/divide_line"
                    android:textColor="#ffffff"
                    android:textSize="8dp"
                    android:background="#ffc145"
                    android:layout_height="match_parent"
                    flow:lineNum="2"
                    android:layout_width="10dp"/>

                <TextView
                    android:text="@string/weight_1"
                    flow:weight="1"
                    style="@style/textStyle"
                    android:background="#4c9be6"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:text="@string/weight_2"
                    flow:weight="2"
                    style="@style/textStyle"
                    android:background="#c2b765"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

                <TextView
                    android:text="@string/weight_3"
                    flow:weight="3"
                    style="@style/textStyle"
                    android:background="#fe8f58"
                    android:layout_width="80dp"
                    android:layout_height="0dp"/>

            </com.suan.flowlayout.FlowLayout>

        </com.suan.flowlayout.FlowLayout>
    </ScrollView>

</LinearLayout>
