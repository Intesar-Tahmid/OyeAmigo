<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.suan.flowlayout.FlowLayout
            flow:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="@string/this_is_normal_mode"
                style="@style/textStyle"
                android:background="#4ac8b5"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="90dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="170dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"/>


            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="150dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="90dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="170dp"
                android:layout_height="50dp"/>

            <Button
                android:text="@string/button"
                flow:lineNum="1"
                style="@style/buttonStyle"
                android:layout_width="100dp"
                android:layout_height="50dp"/>

            <com.suan.flowlayout.FlowLayout
                android:background="#ffffff"
                android:padding="13dp"
                android:layout_width="match_parent"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content">

                <TextView
                    android:text="@string/nested_flow_layout"
                    style="@style/textStyle"
                    android:background="#4ac8b5"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"/>

                <TextView
                    android:background="#9a00b5"
                    android:layout_width="10dp"
                    android:layout_height="50dp"/>

                <Button
                    android:text="@string/button"
                    style="@style/buttonStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

                <Button
                    android:text="@string/button"
                    flow:lineNum="1"
                    style="@style/buttonStyle"
                    android:layout_width="150dp"
                    android:layout_height="50dp"/>

                <Button
                    android:text="@string/button"
                    flow:lineNum="1"
                    style="@style/buttonStyle"
                    android:layout_width="90dp"
                    android:layout_height="50dp"/>

                <Button
                    android:text="@string/button"
                    flow:lineNum="1"
                    style="@style/buttonStyle"
                    android:layout_width="170dp"
                    android:layout_height="50dp"/>

                <Button
                    android:text="@string/button"
                    flow:lineNum="1"
                    style="@style/buttonStyle"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </com.suan.flowlayout.FlowLayout>

        </com.suan.flowlayout.FlowLayout>

    </ScrollView>

</LinearLayout>
