<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:flow="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    >

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.suan.flowlayout.FlowLayout
            android:id="@+id/flow_layout"
            flow:orientation="horizontal"
            flow:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="1"
                style="@style/textStyle"
                android:background="#4ac8b5"
                android:layout_width="90dp"
                android:layout_height="80dp"/>

            <TextView
                android:text="2"
                style="@style/textStyle"
                android:background="#4c9be6"
                android:layout_width="0dp"
                flow:weight="2"
                android:layout_height="170dp"/>

            <TextView
                android:text="3"
                style="@style/textStyle"
                android:background="#c2b765"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>

            <View
                flow:lineNum="2"
                android:background="#ffffff"
                android:layout_width="90dp"
                android:layout_height="80dp"/>

            <View
                android:background="#999992"
                android:layout_width="wrap_content"
                android:layout_height="170dp"/>

            <View
                android:background="#fe8f58"
                android:layout_width="match_parent"
                android:layout_height="80dp"/>


        </com.suan.flowlayout.FlowLayout>

    </ScrollView>

</LinearLayout>
