<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.InterestsActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select your interests.."
        android:textSize="28dp"
        android:textColor="@color/button"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="15dp"/>
    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="20dp"
        app:cardUseCompatPadding="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/filterChipGroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip1"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Animals"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip2"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Art"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip3"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DIY"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip4"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Electronics"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip5"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entertainment"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip6"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fashion"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip7"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Food"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip8"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Festivals"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip9"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gaming"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip10"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Health"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip11"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Music"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip12"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Memes"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip13"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outdoors"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip14"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programming"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip15"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photography"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip16"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Science"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip17"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Travel"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip18"
                        style="@style/CustomChipStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Writing"
                        android:checked="false"
                        android:layout_margin="5dp"
                        />


                </com.google.android.material.chip.ChipGroup>
            </LinearLayout>
        </ScrollView>


    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/doneBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Done"/>
</LinearLayout>